{
  "compilerOptions": {
    "sourceMap": true,
    "target": "ES2021",
    "module": "ESNext",
    "outDir": "dist",
    "jsx": "react",
    "strict": true,
    "moduleResolution": "Node",
    "baseUrl": "./",
    "paths": {
      "~/*": ["./src/*"]
    },
    "lib": ["ES2020", "DOM"],
    "allowJs": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["./node_modules"]
  // "include": ["src/**/*.ts", "src/**/*.tsx"]
  // "include": ["src/**/*"]
}
